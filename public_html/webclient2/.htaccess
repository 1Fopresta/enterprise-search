AuthType Basic
AuthName modBoitho
AuthBoitho on
AuthType Basic
require valid-user

# Execute perl scripts
DirectoryIndex index.pl
AddHandler cgi-script pl
Options +ExecCGI

# Pretty url's (redirect)
RewriteEngine On
RewriteRule ^suggest/(.*)$ /cgi-bin/suggest_webclient?q=$1 [L,QSA]



# No direct reading of tpl files
<Files ~ "\.tpl$">
	Deny from all
</Files>

# Localisation
<Files ~ "\.po$">
	Deny from all
</Files>
