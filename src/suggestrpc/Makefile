	../crawlManager2/client.c
SOURCES_SVC.h = 
SOURCES.x = suggest.x

TARGETS_SVC.c = suggest_svc.c suggest_server.c suggest_xdr.c 
TARGETS_CLNT.c = suggest_clnt.c suggest_client.c suggest_xdr.c 
TARGETS_CLNT_REDICT.c = suggest_clnt.c suggest_client_redict.c suggest_xdr.c 
TARGETS = suggest.h suggest_xdr.c suggest_clnt.c suggest_svc.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_CLNT_REDICT = $(SOURCES_CLNT_REDICT.c:%.c=%.o) $(TARGETS_CLNT_REDICT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 

CPPFLAGS += -D_REENTRANT
CFLAGS += -g  -DWITH_ACL -D_FILE_OFFSET_BITS=64 #-DUS_BOITHOAD
# For using a different usersystem use this, and set usersystem id in acl.c
CFLAGS += -g  -DWITH_ACL -DUSERSYSTEM
LDLIBS += -lnsl -lpthread -lm ../../lib/libcommon.a ../../lib/liblogger.a
RPCGENFLAGS = 

# Targets 

all : $(CLIENT) $(SERVER) $(CLIENTREDICT) install

install:
	cp suggest_client_redict ../../bin
	cp suggest_client ../../bin
	cp suggest_server ../../bin

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) 

$(CLIENT) : $(OBJECTS_CLNT) 
	$(CC) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS) 

$(CLIENTREDICT) : $(OBJECTS_CLNT_REDICT) 
	$(CC) -o $(CLIENTREDICT) $(OBJECTS_CLNT_REDICT) $(LDLIBS) 


$(SERVER) : $(OBJECTS_SVC) 
	$(CC) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS) ../boithoadClientLib/liboithoaut.a

 clean:
	 $(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)


